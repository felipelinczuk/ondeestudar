<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_carregamento"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo_inicial"
        android:layout_width="360dp"
        android:layout_height="488dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_carregamento"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="1"
        android:layout_width="273dp"
        android:layout_height="37dp"
        app:layout_constraintEnd_toEndOf="@id/logo_inicial"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="@id/logo_inicial"
        app:layout_constraintTop_toBottomOf="@id/logo_inicial" />


</androidx.constraintlayout.widget.ConstraintLayout>